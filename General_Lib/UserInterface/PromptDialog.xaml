<Window x:Class="General_Lib.UserInterface.PromptDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:General_Lib.UserInterface"
    WindowStartupLocation="CenterScreen" 
    SizeToContent="WidthAndHeight"
    MinWidth="300"
    MinHeight="100"
    WindowStyle="SingleBorderWindow"
    ResizeMode="CanMinimize">
    <StackPanel Margin="5">
        <TextBlock Name="txtQuestion" Margin="5"/>
        <TextBox Name="txtResponse" Margin="5,0"/>
        <PasswordBox Name="txtPasswordResponse" Margin="5,0"/>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="_OK" IsDefault="True" Margin="5" Name="btnOk" Click="btnOk_Click" Width="75" Height="25"/>
            <Button Content="_Cancelar" IsCancel="True" Margin="5,0,0,0" Name="btnCancel" Click="btnCancel_Click" Width="75" Height="25"/>
        </StackPanel>
    </StackPanel>
</Window>
